<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>
        Home
    </title>
</head>

<body class="d-flex justify-content-center align-items-center flex-column">
    <div class="row w-50 justify-content-center">
        <div id="messageList" class="col-6"></div>
        <div class="col-6 d-flex flex-column w-50 justify-content-center">
            <input type="text" id="message">
            <button class="btn btn-primary my-2" onclick="addMessage()">Broadcast Message</button>
        </div>
    </div>
</body>

<script src="/scripts/socket.io.js"></script>
<script>
    const socket = io('localhost:9000');
    let head = document.querySelector('#messageList');
    let message = document.querySelector('#message');

    function addMessage() {
        if (message.value.length > 0) {
            socket.emit('addMessage', message.value);
        } else {
            alert('type something bruh')
        }
    };

    socket.on('connection', () => {
        console.log('Welcome to the public chat!')
    })

    socket.on('addMessage', (data) => {
        head.innerHTML += '<div class="my-2">' + data + '</div>'
    })
</script>

<style>
    body {
        height: 100vh;
        width: 100vw;
    }
</style>

</html>